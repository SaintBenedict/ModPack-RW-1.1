<Defs>

  <AbilityDef ParentName="PsycastBase">
    <defName>Meditate</defName>
    <label>meditate</label>
    <description>Flush all thoughts from the caster's mind, rapidly draining entropy for a brief moment.</description>
    <level>1</level>
    <iconPath>CustomIcons/Meditate</iconPath>
    <statBases>
      <Ability_EntropyGain>5</Ability_EntropyGain>
	  <Ability_Duration>1.5</Ability_Duration>	  
    </statBases>
	<targetRequired>False</targetRequired>
    <verbProperties>
      <warmupTime>2</warmupTime>
	  <range>0.9</range>
      <targetParams>
        <canTargetSelf>True</canTargetSelf>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class = "CompProperties_AbilityGiveHediff">
        <compClass>CompAbilityEffect_GiveHediff</compClass>
        <hediffDef>Meditation</hediffDef>
		<onlyBrain>True</onlyBrain>
        <psychic>True</psychic>        
      </li>
    </comps>
  </AbilityDef>
  
