<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=====================================================================-->
  <!--=============================== Eggs ================================-->
  <!--=====================================================================-->


  <!-- DesertTortoise -->
  
  <ThingDef ParentName="EggUnfertBase">
    <defName>AEXP_EggDesertTortoiseUnfertilized</defName>
    <label>desert tortoise egg (unfert.)</label>
    <description>An unfertilized desert tortoise egg. It can be eaten raw, but it's much, much better cooked.</description>
    <graphicData>
      <texPath>Things/Item/Resource/AnimalProductRaw/EggRound</texPath>
      <color>(170,170,82)</color>
    </graphicData>
    <statBases>
      <MarketValue>10.0</MarketValue>
    </statBases>
  </ThingDef>

  <ThingDef ParentName="EggFertBase">
    <defName>AEXP_EggDesertTortoiseFertilized</defName>
    <label>desert tortoise egg (fert.)</label>
    <description>A fertilized desert tortoise egg. If all goes well, it should hatch into a baby desert tortoise. It can be eaten raw, but it's much better cooked.</description>
    <graphicData>
      <texPath>Things/Item/Resource/AnimalProductRaw/EggRound</texPath>
      <color>(245,245,245)</color>
      <drawSize>0.8</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>28.0</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Hatcher">
        <hatcherDaystoHatch>3.5</hatcherDaystoHatch>
        <hatcherPawn>AEXP_DesertTortoise</hatcherPawn>
      </li>
    </comps>
  </ThingDef>
	
