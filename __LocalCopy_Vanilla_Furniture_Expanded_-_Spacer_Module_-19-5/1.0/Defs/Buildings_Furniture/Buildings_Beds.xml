<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BedWithQualityBase">
    <defName>Bed_AdvBed</defName>
    <label>advanced bed</label>
    <description>A powered high-tech bed that automatically readjusts itself to perfectly fit the contours of the sleeper, with built in white noise generation. Sleepers often report feeling refreshed and more alert the morning after.</description>
	<thingClass>MFSpacer.Building_RefreshingBed</thingClass>
    <graphicData>
      <texPath>Things/Furniture/AdvancedBed/AdvancedBed</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <castEdgeShadows>True</castEdgeShadows>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>20000</WorkToBuild>
      <Mass>75</Mass>
      <Beauty>8</Beauty>
      <BedRestEffectiveness>1.25</BedRestEffectiveness>
      <Comfort>1.1</Comfort>
      <ImmunityGainSpeedFactor>1.1</ImmunityGainSpeedFactor>
			<SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
		</statBases>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>EndTable</li>
          <li>Dresser</li>
		  <li>Table_RoyalDresser</li>
		  <li>Table_RoyalEndTable</li>
		  		  <li>Table_Wardrobe</li>
				  <li>Table_IlluminatedEndTable</li>
				  <li>Table_IlluminatedDresser</li>
        </linkableFacilities>
      </li>
	  <li Class="CompProperties_Explosive">
        <explosiveRadius>1</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
      </li>
    </comps>
	<tickerType>Normal</tickerType>
    <size>(1,2)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
        <costStuffCount>100</costStuffCount>
    <costList>
	  <Uranium>5</Uranium>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <building>
      <bed_showSleeperBody>false</bed_showSleeperBody>
      <bed_healPerDay>4</bed_healPerDay>
    </building>
    <fillPercent>0.4</fillPercent>
    <pathCost>60</pathCost>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <researchPrerequisites>
      <li>SpacerFurniture</li>
    </researchPrerequisites>
    <techLevel>Spacer</techLevel>
    <uiIconScale>1</uiIconScale>
	<designationCategory>AOMorefurniture</designationCategory>
	<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>
 
