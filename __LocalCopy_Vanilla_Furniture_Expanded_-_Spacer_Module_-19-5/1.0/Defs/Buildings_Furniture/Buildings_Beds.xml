  <ThingDef ParentName="TableBase">
    <defName>Table_IlluminatedEndTable</defName>
    <label>illuminated end table</label>
    <description>A small illuminated bedside table adorned with light strips which makes nearby beds a little bit more comfortable, whilst lighting the room. Must be placed directly adjacent to the head of the bed. Placing more than one end table near the same bed has no effect.</description>
    <surfaceType>Item</surfaceType>
    <graphicData>
      <texPath>Things/Furniture/IlluminatedEndTable/IlluminatedEndTable</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
	  <drawSize>(1,1)</drawSize>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
      </shadowData>
    </graphicData>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <WorkToBuild>4000</WorkToBuild>
      <Mass>8</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>8</Beauty>
    </statBases>
    <pathCost>60</pathCost>
    <defaultPlacingRot>South</defaultPlacingRot>
    <costStuffCount>50</costStuffCount>
    <costList>
      <Steel>30</Steel>
    </costList>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>SpacerFurniture</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <Comfort>0.02</Comfort>
		  <BedRestEffectiveness>0.02</BedRestEffectiveness>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
        <mustBePlacedAdjacentCardinalToBedHead>true</mustBePlacedAdjacentCardinalToBedHead>
      </li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>true</shortCircuitInRain>
				<basePowerConsumption>30</basePowerConsumption>
			</li>
            <li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Glower">
				<glowRadius>8</glowRadius>
				<glowColor>(255,255,255,0)</glowColor>
			</li>
    </comps>
    <staticSunShadowHeight>0</staticSunShadowHeight>
    <castEdgeShadows>false</castEdgeShadows>
	<constructionSkillPrerequisite>4</constructionSkillPrerequisite>
	<designationCategory>AOMorefurniture</designationCategory>
  </ThingDef>
 
  <ThingDef ParentName="ArtableFurnitureBase">
    <defName>Table_IlluminatedDresser</defName>
    <label>illuminated dresser</label>
    <description>An illuminated dresser, adorned with light strips. Gives a small comfort bonus to all nearby beds, whilst lighting up the room. Placing more than one dresser near the same bed has no effect.</description>
    <graphicData>
      <texPath>Things/Furniture/IlluminatedDresser/IlluminatedDresser</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,1)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <pathCost>60</pathCost>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <defaultPlacingRot>South</defaultPlacingRot>
    <costStuffCount>70</costStuffCount>
    <costList>
      <Steel>30</Steel>
    </costList>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>20</Mass>
      <WorkToBuild>6000</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>10</Beauty>
    </statBases>
    <size>(2,1)</size>
    <designationHotKey>Misc12</designationHotKey>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <canOverlapZones>false</canOverlapZones>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>SpacerFurniture</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <Comfort>0.02</Comfort>
		  <BedRestEffectiveness>0.02</BedRestEffectiveness>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
        <maxDistance>6</maxDistance>
      </li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>true</shortCircuitInRain>
				<basePowerConsumption>30</basePowerConsumption>
			</li>
            <li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Glower">
				<glowRadius>8</glowRadius>
				<glowColor>(255,255,255,0)</glowColor>
			</li>
    </comps>
	<constructionSkillPrerequisite>4</constructionSkillPrerequisite>
	<designationCategory>AOMorefurniture</designationCategory>
  </ThingDef>
</Defs>
