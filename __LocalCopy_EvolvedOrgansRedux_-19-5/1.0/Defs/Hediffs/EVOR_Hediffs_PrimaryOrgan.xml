<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <!-- Primary Heart -->
  <HediffDef ParentName="AddedBodyPartBase">
    <defName>EVOR_Hediff_Heart</defName>
    <label>triwoven primary heart</label>
    <defaultLabelColor>(.2,1,.9)</defaultLabelColor>
    <labelNoun>a triwoven primary heart</labelNoun>
    <spawnThingOnRemoved>EVOR_Item_Heart</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>2.0</partEfficiency>
      <betterThanNatural>true</betterThanNatural>
