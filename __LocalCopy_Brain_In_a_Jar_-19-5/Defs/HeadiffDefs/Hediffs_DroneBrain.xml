<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef ParentName="AddedBodyPartBase">
    <defName>DroneBrain</defName>
    <label>drone brain</label>
    <labelNoun>a drone brain</labelNoun>
	<description>A basic drone brain.</description>
    <spawnThingOnRemoved>DroneBrain</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>0.60</partEfficiency>
	  <betterThanNatural>false</betterThanNatural>
    </addedPartProps>
	<stages>
		<li>
			<statOffsets>
				<MentalBreakThreshold>-.99</MentalBreakThreshold>
				<PsychicSensitivity>-.99</PsychicSensitivity>
				<SocialImpact>-.99</SocialImpact>
			</statOffsets>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.30</offset>
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="AddedBodyPartBase">
    <defName>AugmentedBrain</defName>
    <label>augmented brain</label>
    <labelNoun>an augmented brain</labelNoun>
	<description>An advanced augmented brain.</description>
    <spawnThingOnRemoved>AugmentedBrain</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>2</partEfficiency>
	  <betterThanNatural>true</betterThanNatural>
    </addedPartProps>
	<stages>
	  <li>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>+0.20</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>
