<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBaseLGE">
    <defName>AncientStorageUnitLGE</defName>
    <label>ancient storage container</label>
    <description>This crypto storage container seems to contain some items or equipment. It preserved most of it rather well and can be opened, decontructed or destroyed to get access.</description>
    <thingClass>LetsGoExplore.Building_AncientStorageUnitLGE</thingClass>
    <graphicData>
      <texPath>Things/StorageboxLGE</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4.6,4.6)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>360</MaxHitPoints>
      <Flammability>0.8</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(4,2)</size>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(1,0,0)</interactionCellOffset>
    <costList>
      <Steel>80</Steel>
	  <ComponentIndustrial>3</ComponentIndustrial>
	  <Plasteel>27</Plasteel>
      <Uranium>20</Uranium>
    </costList>
    <killedLeavings>
      <Steel>50</Steel>
      <Uranium>10</Uranium>
    </killedLeavings>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<claimable>false</claimable>
			<alwaysDeconstructible>true</alwaysDeconstructible>
      <roofCollapseDamageMultiplier>0.5</roofCollapseDamageMultiplier>
		</building>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2.66</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
      </li>
    </comps>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
  </ThingDef>
  
   <ThingDef ParentName="BuildingBaseLGE">
    <defName>BrokenStorageUnitLGE</defName>
    <label>broken storage container</label>
    <description>This crypto storage container seems to be broken. Its containts have long since deteriorated. However it can still be salvaged for parts.</description>
    <graphicData>
      <texPath>Things/AncientStorageBrokenLGE</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(4.6,4.6)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <MaxHitPoints>280</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(4,2)</size>
    <costList>
      <Steel>80</Steel>
	  <ComponentIndustrial>10</ComponentIndustrial>
	  <Plasteel>60</Plasteel>
    </costList>
    <killedLeavings>
      <Steel>50</Steel>
	  <ComponentIndustrial>5</ComponentIndustrial>
	  <Plasteel>30</Plasteel>
    </killedLeavings>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<claimable>false</claimable>
			<alwaysDeconstructible>true</alwaysDeconstructible>
      <roofCollapseDamageMultiplier>0.5</roofCollapseDamageMultiplier>
    </building>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
	<rotatable>false</rotatable>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
  </ThingDef>
  
</Defs>